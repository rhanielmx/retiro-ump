generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Participant {
  id     String  @id @default(cuid())
  name   String
  phone  String
  age    Int
  church String? // Caso aceite de outras igrejas

  // Informações adicionais
  emergencyContact String
  emergencyPhone   String
  foodRestrictions String?
  medications      String?
  observations     String?

  // Controle
  registeredAt DateTime @default(now())
  confirmed    Boolean  @default(false)

  // Pagamento
  paymentType PaymentType   @default(FULL)
  fullPrice   Decimal?      @db.Decimal(10, 2)
  dailyRate   Decimal?      @db.Decimal(10, 2)
  daysStayed  Int?          @default(0)
  discount    Decimal       @default(0) @db.Decimal(10, 2)
  totalAmount Decimal?      @db.Decimal(10, 2)
  paidAmount  Decimal       @default(0) @db.Decimal(10, 2)
  paidAt      DateTime?
  status      PaymentStatus @default(PENDING)

  // Futuro: relacionamento com pagamentos
  payments Payment[]

  @@index([confirmed])
  @@index([status])
  @@index([paymentType])
}

model Payment {
  id            String      @id @default(cuid())
  participantId String
  participant   Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)

  amount Decimal       @db.Decimal(10, 2)
  method String // PIX, Dinheiro, Cartão, etc
  status PaymentStatus @default(PENDING)

  paidAt      DateTime  @default(now())
  confirmedAt DateTime?

  receipt String? // URL do comprovante se houver
  notes   String?

  @@index([participantId])
  @@index([status])
  @@index([method])
}

model Event {
  id              String   @id @default(cuid())
  name            String
  date            DateTime
  location        String
  description     String?
  maxParticipants Int?
  price           Decimal  @db.Decimal(10, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id       String   @id @default(cuid())
  username String   @unique
  password String
  role     UserRole @default(ADMIN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum UserRole {
  ADMIN
  USER
}

enum PaymentType {
  FULL // Retiro completo
  DAILY // Diária
  PARTIAL // Parcial
}

enum PaymentMethod {
  PIX
  CASH
  CREDIT_CARD
  DEBIT_CARD
  TRANSFER
  OTHER
}

enum PaymentStatus {
  PENDING // Pendente
  PARTIAL // Parcialmente pago
  PAID // Pago
  OVERDUE // Em atraso
}

model Expense {
  id          String   @id @default(cuid())
  description String
  amount      Decimal  @db.Decimal(10, 2)
  category    ExpenseCategory
  date        DateTime @default(now())
  receiptUrl  String?  // Store PDF/image URLs
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([date])
}

model Shop {
  id        String   @id @default(cuid())
  name      String
  contact   String?  // Basic contact info
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  purchases Purchase[]

  @@index([isActive])
}

model Purchase {
  id        String   @id @default(cuid())
  shopId    String
  shop      Shop     @relation(fields: [shopId], references: [id])
  amount    Decimal  @db.Decimal(10, 2)
  items     String?  // JSON string of purchased items
  date      DateTime @default(now())
  receiptUrl String? // Store PDF/image URLs
  notes     String?
  createdAt DateTime @default(now())

  @@index([shopId])
  @@index([date])
}

enum ExpenseCategory {
  FOOD // Food & Groceries
  TRANSPORT // Transportation
  COOKING // Housekeeping/Cooking
  RENT // Rent/Space Rental
  CLEANING // Cleaning Supplies
  MATERIALS // Materials & Equipment
  OTHER // Other/Miscellaneous
}

// =====================
// Modelos de Votação
// =====================

// Categorias de votação (ex: "Melhor pregador", "Melhor louvor")
model VoteCategory {
  id                  String   @id @default(cuid())
  name                String
  order               Int      @default(0)
  isActive            Boolean  @default(true)
  allowMultipleWinners Boolean  @default(false)
  createdAt           DateTime @default(now())
  votes               Vote[]

  @@map("vote_categories")
}

// Participantes do retiro (para autocomplete)
model ParticipantVoting {
  id        String   @id @default(cuid())
  name      String
  nickname  String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@map("participant_voting")
}

// Votos registrados
model Vote {
  id             String   @id @default(cuid())
  categoryId     String
  category       VoteCategory       @relation(fields: [categoryId], references: [id])
  participantIds String[]
  deviceId       String
  createdAt      DateTime @default(now())

  @@unique([categoryId, deviceId])
  @@index([categoryId])
  @@map("votes")
}
